.navbar{
  flex: none;
  display: flex;
  background: #fff;
  box-shadow: 2px 2px 2px #aaa;
  height:7vh;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #99ffcc;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
}

