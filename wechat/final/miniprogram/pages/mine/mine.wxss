/* pages/mine/mine.wxss */
.total{
  height: 100vh;
}

.background{
  z-index: -2;
  width:100%;
  height:100%;
  position: absolute;
}

.top-block{
  height:40vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.userinfo{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-nickname {
  color: #aaa;
}

.center-block{
  height:40vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.click{
  width:90%;
  height:100rpx;
  border-width: 2rpx;
  border-color:#aaa;
  border-style: solid;
  background: white;
  border-radius: 20rpx/20rpx;
  padding-left: 20rpx;
}
.click text{
  line-height:100rpx;
}